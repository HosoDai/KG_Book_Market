<div class="container text-center shadow p-3 mb-5 bg-white rounded">
  <div class="card-container">
    <div class="card-body">
      <%= form_with model: @user do |f| %>
      <h3 class="card-title text-center mb-4 mt-1">ユーザー編集</h3>
      <hr>

      <div class="form-group">
        <%= f.label :Name %><br>
        <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
      </div>

      <div class="form-group">
        <%= f.label :Faculty %><br>
        <%= f.select :faculty, [["神学部", "神学部"], ["文学部", "文学部"], ["社会学部", "社会学部"], ["法学部", "法学部"], ["経済学部", "経済学部"],
                                ["商学部", "商学部"], ["人間福祉学部", "人間福祉学部"], ["国際学部", "国際学部"], ["教育学部", "教育学部"],
                                ["総合政策学部", "総合政策学部"], ["理学部", "理学部"], ["工学部", "工学部"], ["生命環境学部", "生命環境学部"],
                                ["建築学部", "建築学部"], ["理工学部", "理工学部"]], include_blank: "選択して下さい" %>
      </div>

      <div class="form-group">
        <%= f.label :Profile_image %><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール編集", accept: "image/*" %>
      </div>

      <div class="form-group">
         <%= f.submit "変更を保存" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


