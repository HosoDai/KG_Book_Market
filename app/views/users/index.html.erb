<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "user_info", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>User 一覧</h2>
      <table class="table table-striped table-hover bg-light shadow p-3 mb-5 bg-white rounded">
        <thead>
          <tr>
            <th>image</th>
            <th>user_name</th>
            <th>faculty</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(75, 75), class: "rounded-circle border border-5" %></td>
              <td><%= user.name %></td>
              <td><%= user.faculty %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
