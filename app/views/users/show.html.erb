<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-3">
      <%= render "user_info", user: @user %>
    </div>
    <div class="col-lg-8 offset-lg-1">
      <h2>出品 一覧</h2>
      <table class="table table-striped table-hover bg-light shadow p-3 mb-5 bg-white rounded">
        <thead>
          <tr>
            <th>book_title</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= link_to "Show", book_path(book.id) %></td>
              <% if book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>