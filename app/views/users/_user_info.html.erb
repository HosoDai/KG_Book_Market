<div class="card mb-4">
  <div class="card-header">
    User Info
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <%= image_tag user.get_profile_image(100, 100), class: "img-fluid img-profile rounded-circle mx-auto mb-2" %>
      </div>
      <div class="col-sm-6">
        <h6>Name</h6>
        <%= user.name %>

        <h6>Faculty</h6>
        <%= user.faculty %>
      </div>
    </div>
  </div>
</div>

<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_7304" do %>
  <i class="fas fa-user-cog"></i>
<% end %>
