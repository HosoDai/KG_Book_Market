<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-3">
      <%= render "users/user_info", user: @user %>
    </div>
    <div class="col-lg-8 offset-lg-1">
      <h2>Book 一覧</h2>
      <table class="table table-striped table-hover bg-light shadow p-3 mb-5 bg-white rounded">
        <thead>
          <tr>
            <th>title</th>
            <th>user_name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.user.name %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


