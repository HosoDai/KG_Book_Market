<div class="container text-center shadow p-3 mb-5 bg-white rounded">
  <div class="card-container">
    <div class="card-body">
      <%= form_with model: @new_book, method: :post do |f| %>
      <h3 class="card-title text-center mb-4 mt-1">新規投稿</h3>
      <hr>

      <!-- 本のタイトル -->
      <div class="form-group">
        <%= f.label :book_title %><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
         <%= f.submit "投稿" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

